<%= render partial: 'partials/user', locals: { user: @user }%>
<div class='bio'>
  <b>Bio</b>
  <p><%= @user.bio %></p>
</div>
<% @recent_posts.each do |post| %>
  <%= render partial: 'partials/post', locals: { post: post} %>
<% end %>
<%= link_to("see all posts", user_posts_path(@user), class: "see-all-btn") %>